<!--            android:name="libOpenCL-car.so"-->
<!--            android:required="false" />-->
<!--        <uses-native-library-->
<!--            android:name="libOpenCL-pixel.so"-->
<!--            android:required="false" />-->

    </application>
    <!--允许访问网络，必选权限-->


</manifest>